<!doctype html>
<html lang="en">
    <head>
        <link rel="icon" type="image/x-icon" href="/public/images/favicon.ico" />
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <meta name="description" content="Play Chess (sponsored by Jonathan Werner)!" />
        <link rel="stylesheet" href="/public/style/global.css" />
        <link rel="stylesheet" href="/public/style/start/style.css" />
        <script src="/public/javascript/start/index.js" defer></script>

        <title>JW Chess</title>
    </head>
    <body>
        <div class="background">
            <img src="/public/images/bg2.svg" class="bg1" alt="Background image of a black queen" />
            <img src="/public/images/bg1.svg" class="bg2" alt="Background image of a black knight" />
        </div>
        <main class="main">
            <h1 class="title">Jonathan Werner Chess</h1>
            <form novalidate="" class="enter-pin-form join-form" onsubmit="event.preventDefault(); submitJoin(event)">
                <input
                    name="gameId"
                    placeholder="Game PIN"
                    id="game-input"
                    class="enter-pin-input"
                    autocomplete="off"
                    value=""
                />
                <input
                    name="nickname"
                    placeholder="Nickname"
                    id="nickname-input"
                    class="enter-nickname-input"
                    autocomplete="off"
                    maxlength="25"
                    value=""
                />
                <button class="submit_button" type="submit">Join</button>
            </form>
            <% if (joinErr) { %>
            <div class="error joinError">Not a valid Game PIN</div>
            <% } %>
            <% if (joinPlayerCountErr) { %>
            <div class="error joinError">Match full</div>
            <% } %>

            <span class="separatorOr">OR</span>

            <form
                novalidate=""
                class="enter-pin-form create-form"
                onsubmit="event.preventDefault(); submitCreate(event)"
            >
                <label for="nickname_create">Create a Game</label>
                <input
                    name="nickname_create"
                    placeholder="Nickname"
                    id="nickname_create"
                    class="enter-pin-input"
                    autocomplete="off"
                    maxlength="25"
                    value=""
                />
                <div class="color-selection">
                    <input type="radio" id="color-selection-white" name="color" value="w" />
                    <label class="rl_white" for="color-selection-white"
                        ><img src="/public/images/pieces/wk.png" alt="White King"
                    /></label>
                    <input type="radio" id="color-selection-random" name="color" value="r" checked />
                    <label class="rl_random" for="color-selection-random"
                        ><img src="/public/images/question_mark.svg" alt="White King"
                    /></label>
                    <input type="radio" id="color-selection-black" name="color" value="b" />
                    <label class="rl_black" for="color-selection-black"
                        ><img src="/public/images/pieces/bk.png" alt="White King"
                    /></label>
                </div>
                <button class="submit_button" type="submit">Create</button>
            </form>
        </main>
        <footer class="footer">
            <div>
                sponsored by
                <a
                    href="https://www.hockey-trier.de/wp-content/uploads/JW.jpg"
                    target="_blank"
                    rel="noopener noreferrer"
                    >Jonathan Werner</a
                >
            </div>
        </footer>
    </body>
</html>
